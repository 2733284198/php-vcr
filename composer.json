{
    "name": "adri/phpvcr",
    "description": "Record your test suite's HTTP interactions and replay them during future test runs for fast, deterministic, accurate tests.",

    "authors": [
        {
            "name": "Adrian Philipp",
            "email": "mail@adrian-philipp.com"
        }
    ],

    "require": {
        "php": ">=5.3.15",
        "ext-curl": "*",
        "guzzle/http": "3.0.*@dev",
        "guzzle/plugin-backoff": "3.0.*@dev",
        "beberlei/assert": "dev-master",
        "symfony/yaml": "2.3.*@dev"
    },

    "require-dev": {
        "mikey179/vfsStream": "dev-master"
    },

    "suggest": {
        "ext-runkit": "*"
    },

    "autoload": {
        "classmap": ["src/"]
    }
}
