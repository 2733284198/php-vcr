{
    "name": "adri/php-vcr",
    "description": "Record your test suite's HTTP interactions and replay them during future test runs for fast, deterministic, accurate tests.",
    "license": "MIT",

    "authors": [
        {
            "name": "Adrian Philipp",
            "email": "mail@adrian-philipp.com"
        }
    ],

    "require": {
        "php": ">=5.3.15",
        "ext-curl": "*",
        "guzzle/http": "3.6.*",
        "guzzle/plugin-backoff": "3.6.*",
        "beberlei/assert": "1.*",
        "symfony/yaml": "2.*"
    },

    "require-dev": {
        "mikey179/vfsStream": "dev-master",
        "behat/behat": "2.4.*@stable",
        "guzzle/plugin-mock": "3.6.*"
    },

    "suggest": {
        "ext-runkit": "*"
    },

    "autoload": {
        "classmap": ["src/"]
    }
}
